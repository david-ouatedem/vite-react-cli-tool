{
    "compilerOptions": {
        "target": "es6",
        "module": "NodeNext",
        "moduleResolution": "nodenext",
        "outDir": "./dist",
        "strict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true
    },
    "include": [
        "src/**/*"
    ]
}